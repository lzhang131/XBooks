<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:paddingHorizontal="15dp"
              android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent"
                  android:paddingVertical="5dp"
                  android:layout_height="100dp">
        <ImageView
                android:id="@+id/book_item_image"
                android:layout_width="100dp"
                android:src="@mipmap/b101t"
                android:scaleType="fitStart"
                android:layout_height="100dp"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <TextView
                    android:id="@+id/book_item_title"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:text="title"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/book_item_author"
                    android:layout_gravity="center_vertical"
                    android:text="author"
                    android:textSize="16sp"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/book_item_publisher"
                    android:layout_gravity="center_vertical"
                    android:text="publisher"
                    android:textSize="16sp"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:id="@+id/book_item_action"
                  android:layout_width="match_parent"
                  android:layout_height="40dp"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">
        <ImageView
                android:id="@+id/book_item_bookmark"
                android:layout_width="30dp"
                android:layout_marginStart="-3dp"
                android:src="@drawable/bookmark_unselect"
                android:layout_height="30dp"/>
        <TextView
                android:id="@+id/book_item_bookmark_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="16sp"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center_vertical|end">
            <ImageView
                    android:id="@+id/book_item_like"
                    android:layout_width="30dp"
                    android:src="@drawable/like_unselect"
                    android:layout_height="30dp"/>
            <TextView
                    android:id="@+id/book_item_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>