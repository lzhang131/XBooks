<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="horizontal"
              android:background="@color/taobao_color"
              android:gravity="center_vertical"
              android:layout_height="60dp">

    <ImageView android:id="@+id/action_bar_left"
               android:src="@drawable/home_menu"
               android:layout_marginHorizontal="10dp"
               android:layout_width="40dp"
               android:layout_height="40dp"/>

    <LinearLayout android:layout_width="0dp"
                  android:gravity="center_vertical"
                  android:orientation="horizontal"
                  android:layout_weight="1"
                  android:layout_height="match_parent">
        <EditText
                android:id="@+id/action_bar_search"
                android:layout_width="match_parent"
                android:background="@drawable/input"
                android:visibility="gone"
                android:hint="Please enter Keywords"
                android:inputType="textPersonName"
                android:layout_height="40dp"/>
        <TextView
                android:id="@+id/action_bar_title"
                android:layout_width="match_parent"
                android:text=""
                android:textColor="@color/white"
                android:textSize="30sp"
                android:layout_height="40dp"/>
    </LinearLayout>

    <LinearLayout android:layout_width="60dp"
                  android:layout_height="match_parent"
                  android:gravity="center_vertical|end"
                  android:orientation="vertical">

        <ImageView android:id="@+id/action_bar_right"
                   android:src="@drawable/search_menu"
                   android:layout_marginHorizontal="10dp"
                   android:layout_width="40dp"
                   android:layout_height="40dp"/>
    </LinearLayout>
</LinearLayout>