<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="horizontal"
              android:background="@color/taobao_color"
              android:gravity="center_vertical"
              android:layout_height="60dp">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginHorizontal="10dp"
              android:text="@string/app_name"
              android:textColor="@color/white"
              android:textSize="30sp"/>

    <LinearLayout android:layout_width="0dp"
                  android:gravity="center_vertical"
                  android:orientation="horizontal"
                  android:layout_weight="1"
                  android:layout_height="match_parent">
    </LinearLayout>

    <LinearLayout android:layout_width="250dp"
                  android:layout_height="match_parent"
                  android:gravity="center_vertical|end"
                  android:orientation="horizontal">

        <ImageView android:id="@+id/home_action_bookmark"
                   android:src="@drawable/bookmark_menu"
                   android:layout_marginHorizontal="4dp"
                   android:scaleType="centerCrop"
                   android:layout_width="36dp"
                   android:layout_height="36dp"/>
        <TextView android:id="@+id/home_action_bookmark_count"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:text="1"
                  android:gravity="top"
                  android:textSize="18sp"
                  android:textColor="@color/white"/>
        <ImageView android:id="@+id/home_action_like"
                   android:src="@drawable/like_menu"
                   android:layout_marginHorizontal="4dp"
                   android:layout_width="36dp"
                   android:layout_height="36dp"/>
        <TextView android:id="@+id/home_action_like_count"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:text="22"
                  android:gravity="top"
                  android:textSize="18sp"
                  android:textColor="@color/white"/>
        <ImageView android:id="@+id/home_action_user"
                   android:src="@drawable/user_menu"
                   android:layout_marginHorizontal="2dp"
                   android:layout_width="40dp"
                   android:layout_height="40dp"/>
        <ImageView android:id="@+id/home_action_search"
                   android:src="@drawable/search_menu"
                   android:layout_marginEnd="10dp"
                   android:layout_width="40dp"
                   android:layout_height="40dp"/>
    </LinearLayout>
</LinearLayout>